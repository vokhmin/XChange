<?xml version="1.1" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <appender name="syncstdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.S Z} %5p [%t] %c - %m%n</pattern>
        </encoder>
    </appender>
    <appender name="stdout" class="ch.qos.logback.classic.AsyncAppender">
        <discardingThreshold>0</discardingThreshold>
        <queueSize>512</queueSize>
        <appender-ref ref="syncstdout"/>
    </appender>

    <root level="INFO">
        <appender-ref ref="stdout"/>
    </root>
    <logger name="com.spotware" level="DEBUG" additivity="false">
        <appender-ref ref="stdout"/>
    </logger>
    <logger name="org.springframework" additivity="false" level="warn">
        <appender-ref ref="stdout"/>
    </logger>
    <logger name="org.apache" additivity="false" level="warn">
        <appender-ref ref="stdout"/>
    </logger>

</configuration>